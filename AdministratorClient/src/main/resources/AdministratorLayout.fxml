<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="MainBox" maxHeight="500" maxWidth="700" minHeight="400" minWidth="600" prefHeight="400.0"
            prefWidth="600.0" styleClass="mainPane" xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="tin.administrator.controller.Controller">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="menuCloseApp" onAction="#closeApp" mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Sensors">
                    <items>
                        <MenuItem fx:id="menuSensorsAddNewSensor" mnemonicParsing="false"
                                  onAction="#addNewSensorClicked" text="Add new sensor"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem fx:id="menuAbout" onAction="#showCredits" mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox prefHeight="354.0" prefWidth="370.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Sensors"/>
                <TableView fx:id="sensorsTable" onMouseClicked="#tableClicked" prefHeight="310.0" prefWidth="370.0">
                    <columns>
                        <TableColumn fx:id="tableSensorId" minWidth="50.0" prefWidth="50.0" sortable="true" text="ID"/>
                        <TableColumn fx:id="tableSensorName" minWidth="140.0" prefWidth="140.0" text="Name"/>
                        <TableColumn fx:id="tableSensorIp" minWidth="100.0" prefWidth="100.0" text="IP"/>
                        <TableColumn fx:id="tableSensorPort" minWidth="78.0" prefWidth="78.0" text="Port"/>
                    </columns>
                </TableView>
                <Button fx:id="buttonNewSensor" mnemonicParsing="false" onAction="#addNewSensorClicked"
                        prefHeight="25.0" prefWidth="206.0" styleClass="newSensor" text="Add new sensor"/>
            </children>
        </VBox>
    </left>
    <bottom>
        <AnchorPane prefHeight="21.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="23.0" layoutY="2.0" text="Administrator Panel"/>
                <Label layoutX="516.0" layoutY="2.0" text="Version 0.1"/>
            </children>
        </AnchorPane>
    </bottom>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="20.0" layoutY="22.0" text="Sensor Name">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Label fx:id="labelName" layoutX="20.0" layoutY="65.0" prefHeight="20.0" prefWidth="140.0" text="Name">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <TextField fx:id="textFieldEditedName" visible="false" layoutX="20.0" layoutY="65.0" prefWidth="140.0"/>
                <Button fx:id="buttonEditName" onAction="#editNameClicked" layoutX="179.0" layoutY="63.0" mnemonicParsing="false" text="Edit"/>
                <Label layoutX="21.0" layoutY="144.0" text="State:">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Label fx:id="labelState" layoutX="99.0" layoutY="152.0" text="ONLINE">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Button fx:id="buttonDisconnect" layoutX="50.0" layoutY="197.0" mnemonicParsing="false"
                        onAction="#disconnectClicked" prefHeight="60.0" prefWidth="120.0" text="Disconnect"/>
                <Button fx:id="buttonRevoke" layoutX="50.0" layoutY="278.0" mnemonicParsing="false"
                        onAction="#revokeClicked" prefHeight="60.0" prefWidth="120.0" text="Revoke"/>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
